<%- include layouts/header.ejs %>

<main>
  <article>


    <section class="section hero" id="home">
      <div class="container">

        <div class="hero-content">
          <div class="container wow fadeIn animated">
            <h2 class="mt-5 mb-3 h2 text-center"> Productos en mi carrito</h2>
            <div class="card my-5">
                <div class="card-body">
                    <table class="table table-responsive-md mb-0 container">
                        <thead>
                            <tr>
                                <th style="width: 50px;">
                                    <strong>#</strong>
                                </th>
                                <th class="th-lg">
                                    <strong>Producto</strong>
                                </th>
                                <th class="th-lg ">
                                    <strong>Precio</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Cantidad</strong>
                                </th>
                                <th class="text-center">
                                    <strong>Subtotal</strong>
                                </th>
                                <th style="width: 50px;"></th>
                            </tr>
                        </thead>
                        <tbody class="cartRows">
                        </tbody>
                    </table>
                    <div class="card-footer text-right container">
                        <h2>Total: <span class="totalAmount">$ 0</span></h2>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header text-center">
                    Terminar la compra
                </div>
                <form class="card-body" id="checkoutCart">
                    <div class="row">
                    
                        <div class=" col-md-6 mb-4">
                            <label for="country">Pago</label>
                            <select class="custom-select d-block w-100" id="paymentMethod" name="paymentMethod"
                                required="">
                                <option value="">Elegir...</option>
                                <option value="Efectivo">Efectivo</option>
                                <option value="Débito">Tarjeta Débito</option>
                                <option value="Crédito">Tarjeta Crédito</option>
                            </select>
                        

                        </div>
                    </div>
                    <button class="btn btn-primary btn-lg btn-block waves-effect waves-light"type="submit">Comprar</button>
                </form>
            </div>
        </div>
      </div>
    </section>


  </article>
</main>
<%- include layouts/footer.ejs %>

